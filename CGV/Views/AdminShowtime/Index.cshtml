
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MyLayout/_LayoutAdmin.cshtml";
    <script src="~/Content/Assets/js/JQuery3.3.1.js"></script>
    <script src="~/Content/Assets/js/lightslider.js"></script>

    <script src="https://kit.fontawesome.com/c8e4d183c2.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
}
@model List<Model.showtime>
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Suất chiếu</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Suất chiếu</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-info">
                        <strong>@ViewBag.Msg</strong>
                    </div>
                }
                <button type="button" class="btn btn-success" data-bs-toggle="modal"
                        data-bs-target="#modalAdd">
                    Thêm mới
                </button>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Date</th>
                            <th>Showtime</th>
                            <th>Film</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>Date</th>
                            <th>Showtime</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{var stt = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@stt</td>
                                <td>
                                    @{var schedule = new DatabaseIO.ScheduleDao().getAll();
                                    }
                                    @foreach (var item1 in schedule)
                                    {
                                        if (item1.id == item.schedule_id)
                                        {
                                            string dateschedule = String.Format("{0:yyyy-MM-dd}", item1.dateschedule);
                                            @dateschedule;
                                        }
                                    }

                                </td>
                                <td>@item.start_time - @item.end_time</td>
                                <td>
                                    @{var film = new DatabaseIO.FilmDao().getAll();
                                    }
                                    @foreach (var item2 in schedule)
                                    {
                                        if (item2.id == item.schedule_id)
                                        {
                                            foreach (var item3 in film)
                                            {
                                                if (item3.id == item2.film_id)
                                                {
                                                    @item3.film_name;
                                                }
                                            }
                                        }
                                    }
                                </td>
                                <td>

                                    @{
                                        var idModel = "exampleModal" + item.id;
                                    }
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#@idModel">
                                        Update
                                    </button>
                                    <form action="/AdminShowtime/Delete" class="btn btn-danger" method="post">
                                        <input type="hidden" class="form-control" id="id" name="id" value="@item.id">
                                        <button type="submit" style="background:none;border:none;color:white"> Delete</button>
                                    </form>
                                </td>
                            </tr>

                            <!-- Modal Update-->
                            <div class="modal fade" id="@idModel" tabindex="-1"
                                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Cập nhập</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="POST" action="/AdminShowtime/Update" class="register-form" id="register-form">
                                                <input type="hidden" class="form-control" id="id" name="id" value="@item.id">
                                                <div class="mb-3">
                                                    <div class="mb-3">
                                                        <label for="category-film" class="col-form-label">
                                                            Ngày
                                                            chiếu:
                                                        </label>
                                                        <input type="text" class="form-control"
                                                               id="category-film" value="@foreach (var item1 in schedule)
                                    {
                                                                   string dateschedule = String.Format("{0:yyyy-MM-dd}", item1.dateschedule);
                                        if (item1.id == item.schedule_id)
                                        {
                                            @dateschedule;
                                        }
                                    }" disabled>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="category-film" class="col-form-label">
                                                            Bắt
                                                            đầu:
                                                        </label>
                                                        <input type="time" class="form-control"
                                                               id="category-film" name="start" value="@item.start_time">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="category-film" class="col-form-label">
                                                            Kết
                                                            thúc:
                                                        </label>
                                                        <input type="time" class="form-control"
                                                               id="category-film" name="end" value="@item.end_time">
                                                    </div>
                                                </div>
                                                <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                    Close
                                                </button>
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal Update-->
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
@{var films = new DatabaseIO.FilmDao().getAll();
}
<div class="modal fade" id="modalAdd" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/AdminShowtime/Add" class="register-form" id="register-form">


                    <div class="mb-3">
                        <label for="category-film"
                               class="col-form-label">Phim:</label>
                        <select class="form-select"
                                aria-label="Default select example" name="filmid" required onchange="filmChanged(this)">
                            <option value="">Chọn phim</option>
                            @foreach (var item1 in films)
                            {
                                <option value="@item1.id">@item1.film_name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="mb-3">
                            <label for="category-film"
                                   class="col-form-label">Lịch chiếu:</label>
                            <select class="form-select"
                                    aria-label="Default select example" name="id" id="nameschedule" required>
                                
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="category-film" class="col-form-label">
                                Bắt
                                đầu:
                            </label>
                            <input type="time" class="form-control"
                                   id="category-film" name="start" required>
                        </div>
                        <div class="mb-3">
                            <label for="category-film" class="col-form-label">
                                Kết
                                thúc:
                            </label>
                            <input type="time" class="form-control"
                                   id="category-film" name="end" required>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-primary">Save </button>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<script language="javascript">
    // Hàm xử lý khi thẻ select thay đổi giá trị được chọn
    // obj là tham số truyền vào và cũng chính là thẻ select
    function filmChanged(obj) {
        var id = obj.value;
        $.ajax({
            url: '/Film/getSchedule',
            type: "post",
            data: {
                id: id
            },
            success: function (data) {
                if (data.status == "OK") {
                    $('#nameschedule').html(data.data);
                } else if (data.status == "ERROR") {

                }

                console.log(data);
            },
            error: function (error) {
                console.log(error);
            }
        })
    }

</script>


